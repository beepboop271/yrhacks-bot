{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Roles",
  "description": "Roles to set up in the discord server",
  "type": "array",
  "items": {
    "type": "object",
    "description": "A role",
    "properties": {
      "name": {
        "type": "string",
        "description": "The name of the role",
        "minLength": 1
      },
      "color": {
        "oneOf": [
          {
            "type": "string",
            "pattern": "^#[0-9a-f]{6}$"
          },
          {
            "type": "string",
            "enum": [
              "DEFAULT",
              "WHITE",
              "AQUA",
              "GREEN",
              "BLUE",
              "YELLOW",
              "PURPLE",
              "LUMINOUS_VIVID_PINK",
              "GOLD",
              "ORANGE",
              "RED",
              "GREY",
              "DARKER_GREY",
              "NAVY",
              "DARK_AQUA",
              "DARK_GREEN",
              "DARK_BLUE",
              "DARK_PURPLE",
              "DARK_VIVID_PINK",
              "DARK_GOLD",
              "DARK_ORANGE",
              "DARK_RED",
              "DARK_GREY",
              "LIGHT_GREY",
              "DARK_NAVY",
              "BLURPLE",
              "GREYPLE",
              "DARK_BUT_NOT_BLACK",
              "NOT_QUITE_BLACK",
              "RANDOM"
            ]
          }
        ],
        "description": "The color of the role"
      },
      "hoist": {
        "type": "boolean",
        "description": "Whether the role should appear separately, default false"
      },
      "permissions": {
        "type": "array",
        "description": "The permissions to grant to this role",
        "items": {
          "type": "string",
          "description": "The name of the role",
          "enum": [
            "CREATE_INSTANT_INVITE",
            "KICK_MEMBERS",
            "BAN_MEMBERS",
            "ADMINISTRATOR",
            "MANAGE_CHANNELS",
            "MANAGE_GUILD",
            "ADD_REACTIONS",
            "VIEW_AUDIT_LOG",
            "PRIORITY_SPEAKER",
            "STREAM",
            "VIEW_CHANNEL",
            "SEND_MESSAGES",
            "SEND_TTS_MESSAGES",
            "MANAGE_MESSAGES",
            "EMBED_LINKS",
            "ATTACH_FILES",
            "READ_MESSAGE_HISTORY",
            "MENTION_EVERYONE",
            "USE_EXTERNAL_EMOJIS",
            "VIEW_GUILD_INSIGHTS",
            "CONNECT",
            "SPEAK",
            "MUTE_MEMBERS",
            "DEAFEN_MEMBERS",
            "MOVE_MEMBERS",
            "USE_VAD",
            "CHANGE_NICKNAME",
            "MANAGE_NICKNAMES",
            "MANAGE_ROLES",
            "MANAGE_WEBHOOKS",
            "MANAGE_EMOJIS"
          ]
        }
      },
      "mentionable": {
        "type": "boolean",
        "description": "Whether the role can be mentioned by all users, default false"
      }
    },
    "required": [ "name" ]
  }
}
